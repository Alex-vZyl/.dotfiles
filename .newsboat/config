# Settings.

auto-reload yes
notify-program "dunst"
browser "firefox"

# Key bindings.

unbind-key h
unbind-key j
unbind-key k
unbind-key l

bind-key h quit
bind-key j down
bind-key k up
bind-key l open

bind-key ^U halfpageup
bind-key ^D halfpagedown

# Colors.

color info white black bold
color listnormal white default
color listfocus black yellow 
color listfocus_unread green yellow
color listnormal_unread green default 

# UI.

datetime-format "%d-%m-%Y"
feedlist-title-format "       Feeds   ( 󰋻 %u )"
feedlist-format "   %10u    %t"
itemview-title-format "   󱓷    %T"
articlelist-title-format "       %T   ( 󰋻 %u )"
articlelist-format "%4i %f %D    %?T?|%-17T|  ?%t"
