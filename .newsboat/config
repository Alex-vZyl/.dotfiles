# Settings.

auto-reload yes
notify-program "notify-send"
# browser "firefox"
browser "tmux new-window lynx %u"

# Key bindings.

show-keymap-hint no

unbind-key h
unbind-key j
unbind-key k
unbind-key l

bind-key h quit
bind-key j down
bind-key k up
bind-key l open

bind-key ^U halfpageup
bind-key ^D halfpagedown

# Colors.

color info black cyan bold
color listnormal white default
color listfocus white black 
color listfocus_unread green black 
color listnormal_unread green default 

# UI.

datetime-format "%d-%m-%Y"
feedlist-title-format "       Feeds   ( 󰋻 %u )"
feedlist-format "   %10u    %t"
itemview-title-format "   󱓷    %T"
articlelist-title-format "       %T   ( 󰋻 %u )"
articlelist-format "%4i %f %D    %?T?|%-17T|  ?%t"
selecttag-title-format "       Tags"	
notify-format "  RSS feed updated  ( 󱓷  %n )"
